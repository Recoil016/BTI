{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Core",
        "program": "${workspaceFolder}/core/build/app.js"
      },
      {
        "name": "Launch live Chrome",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/live/src",
        "sourceMapPathOverrides": {
          "webpack:///src/*": "${webRoot}/*"
        }
      },
      {
        "name": "Launch preview Chrome",
        "type": "browser-preview",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/live/src",
        "sourceMapPathOverrides": {
          "webpack:///src/*": "${webRoot}/*"
        }
      },
      {
        "name": "Attach preview Chrome",
        "type": "browser-preview",
        "request": "attach"
      }
    ]
  }
